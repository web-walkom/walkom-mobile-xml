<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MapActivity">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageButton
        android:id="@+id/closeExcursion"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/light_button"
        android:contentDescription="@string/stop_description"
        android:onClick="onCLickStopExcursion"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/dark_gray" />

    <ImageButton
        android:id="@+id/listPlaces"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/light_button"
        android:contentDescription="@string/list_places_description"
        android:onClick="onClickListPlaces"
        android:src="@drawable/list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/light_gray" />

    <ImageButton
        android:id="@+id/location"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/navigation"
        android:onClick="onClickLocationMe"
        android:contentDescription="@string/location_me_description"
        app:layout_constraintBottom_toBottomOf="@+id/mapview"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/light_gray" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:gravity="end|center_vertical"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/zoomIn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/light_button"
            android:contentDescription="@string/zoom_in_description"
            android:onClick="onClickZoomIn"
            android:src="@drawable/plus"
            app:tint="@color/light_gray" />

        <ImageButton
            android:id="@+id/zoomOut"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/light_button"
            android:contentDescription="@string/zoom_out_description"
            android:onClick="onClickZoomOut"
            android:src="@drawable/minus"
            app:tint="@color/light_gray" />
    </LinearLayout>

    <Button
        android:id="@+id/startExcursion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/light_button"
        android:drawableLeft="@drawable/play"
        android:drawableTint="@color/dark_gray"
        android:drawablePadding="5dp"
        android:gravity="start|center_vertical"
        android:onClick="onClickStartExcursion"
        android:paddingHorizontal="16dp"
        android:text="@string/start_excursion"
        android:textAllCaps="false"
        android:textColor="@color/light_gray"
        android:textSize="17sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/soundAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingHorizontal="15dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/pauseExcursion"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/light_button"
            android:contentDescription="@string/pause_description"
            android:onClick="onCLickPauseExcursion"
            android:src="@drawable/pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/dark_gray" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="5dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pauseExcursion">

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxHeight="5dp"
                android:thumbTint="@color/green"
                android:progressDrawable="@drawable/bg_seekbar" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>