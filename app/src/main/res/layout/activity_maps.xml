<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MapsActivity">

    <com.yandex.mapkit.mapview.MapView
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="1dp" />

    <ImageButton
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/light_gray" />

    <ImageButton
        android:id="@+id/location"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/circle_button"
        android:src="@drawable/navigation"
        app:layout_constraintBottom_toBottomOf="@+id/mapview"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/light_gray" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="@+id/mapview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="15dp" >

            <Button
                android:id="@+id/listPlaces"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/light_button"
                android:text="@string/list_places"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingHorizontal="7dp"
                android:drawableLeft="@drawable/list"
                android:gravity="start|center_vertical"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/startExcursion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/light_button"
                android:onClick="startExcursion"
                android:paddingHorizontal="12dp"
                android:text="@string/start_excursion"
                android:textAllCaps="false"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:drawableLeft="@drawable/play"
                android:gravity="start|center_vertical"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/pauseExcursion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/light_button"
                android:text="@string/pause_excursion"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingHorizontal="12dp"
                android:drawableLeft="@drawable/pause"
                android:gravity="start|center_vertical"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/stopExcursion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/light_button"
                android:text="@string/stop_excursion"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:paddingHorizontal="7dp"
                android:drawableLeft="@drawable/stop"
                android:gravity="start|center_vertical"
                app:backgroundTint="@null" />

        </LinearLayout>
    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>